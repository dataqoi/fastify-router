{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "pretty": true,
    "lib": ["es2017"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"]
    }
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules/**", "build.ts"],
  "references": [
    { "path": "./tsconfig.build.json" }
  ]
}